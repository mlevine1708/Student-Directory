<!DOCTYPE html>
<html>
  <head>
    <title>Virtual</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


  <% if logged_in? %>
    <nav class="navbar">
      <%= link_to 'Log Out', logout_path, method: :delete, class: 'navlink' %>
      <%= link_to 'All Students', students_path, class: 'navlink'%>
      <%= link_to 'New Student', new_student_path, class: 'navlink' %>
      <%= link_to 'All Teachers', teachers_path, class: 'navlink' %>
    </nav>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
