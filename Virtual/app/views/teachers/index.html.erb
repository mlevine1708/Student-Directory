<h1>All Teachers</h1>

<ul>
  <% @teachers.each do |teacher|%>
    <li>
      <%= link_to @teachers.name, teacher_path(teacher) %> -
      <%= teacher.grade %> -

        <ul>
          <% @teachers.ordered_students.each do |p|%>
          <li><strong><%= p.name %></strong> |
            <%= p.grade%> grade |
            Parent: <%= p.user.username%>
          </li>
          <% end %>
        </ul>
    </li>
  <% end %>
</ul>
