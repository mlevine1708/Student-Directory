<h4>Find A Teacher</h4>

  <%= form_tag(teachers_path, method: get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag ("Search") %>
  <% end %>

<h1>Students Listed By Teacher</h1>

<ul>
  <% @teachers.each do |teacher|%>
    <li>
      <%= link_to teacher.name, teacher_path(teacher) %>
      <%= teacher.grade %>

        <ul>
          <% teacher.ordered_students.each do |student|%>
          <li><strong><%= student.name %></strong> |
            <%= student.grade%> grade |
            Parent: <%= student.user.username%>
          </li>
          <% end %>
        </ul>
    </li>
  <% end %>
</ul>
