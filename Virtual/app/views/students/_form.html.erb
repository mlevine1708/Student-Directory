<%= form_for(@student) do |f| %>

  <%= render partial: 'errors', locals: {object: @student} %>


  <%= f.label :name %>
  <%= f.text_field :name %>


  <%= f.label :parent %>
  <%= f.text_field :parent %>

  <%= f.label :grade %>
  <%= f.number_field :grade, min:1, max:12 %>

  <%= f.label :email_address %>
  <%= f.email_field :email %>

  <%= f.label :phone_number %>
  <%= f.number_field :phone_number %>

  <br><br>

  <%= f.label :teacher_id, "Select a Teacher" %>
  <%= f.collection_select :teacher_id, Teacher.all, :id, :name, prompt: true %>
  <br><br>

  <% if !params[:teacher_id] %>
    <h4>Or add a new teacher:</h4>

    <%= f.fields_for :teacher do |v|%>
        <%= v.label :name %>
        <%= v.text_field :name %>

        <%= v.label :grade %>
        <%= v.number_field :grade %>


    <% end %>
  <% end %>

  <br><br>
  <%= f.submit %>

<% end %>
