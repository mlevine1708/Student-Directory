<h1>All the Students!</h1>

<%= form_tag("/students", method: "get") do %>
  <%= label_tag(:grade, "All students above grade:") %>
  <%= number_field_tag(:grade) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>

        <ul>
          <% @students.each do |student|%>
          <li><strong><%= student.name %></strong> |
            <%= student.grade%> grade |
            Parent: <%= student.user.username%>
          </li>
          <% end %>
        </ul>
</ul>
